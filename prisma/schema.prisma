// service page contents "What Your Client Gets" Section
model WhatYourClientGets {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  image String 
  key     String @unique @default("main")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  options WhatYourClientGetsItem[]

}

model WhatYourClientGetsItem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  subTitle String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  parentId  String   @db.ObjectId
  parent    WhatYourClientGets @relation(fields: [parentId], references: [id], onDelete: Cascade)
}
 
 
